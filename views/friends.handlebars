<section class="goals float-right col-md-9">
    <div class="my-goals">
        <h3 class="text-white"> Following</h3>
        <br>
        <ul>
            {{#each users}}
            <div class="row">
                <div data-id="{{id}}" class="btn col-xs-10 col-md-10 btn-search-user">
                    <img class="nav-profile-image float-left" src={{image}}>
                    <h3 class="float-left search-result-name">{{firstName}} {{lastName}}</h3>
                </div>

            </div>
            {{/each}}
        </ul>
    </div>
</section>