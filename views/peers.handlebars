<section data-id="{{id}}" class="peer-profile-view col-md-9 col-md btn-search-user-in-peers float-right">
    <div class = "row">
        <span class="peer-view">
            <span class="btn col-10 col-md-10 peer-btn">
                <img class="nav-profile-image float-left" src={{users.image}}>
                <h5 class="float-left search-result-name">{{users.firstName}} {{users.lastName}}</h5>
            </span>

            <span class="col-2 col-md-2 float-right">
                <button class=" btn add-friend" data-id = "{{id}}">
                <i class="fa fa-user-plus"></i>
                </button>
            </span>
        </span>
    </div>
</section>


<section class="goals float-right col-md-9">

    {{#unless True}}
    <div class="my-goals">
        <h3 class="goal-headings">Current Goals</h3>
        <ul>
            {{#each goals}} {{#unless completed}} {{> goals/goal-search completed=false}} {{/unless}} {{/each}}
        </ul>
    </div>
    {{/unless}}
    <br> {{#unless True}}
    <div class="my-goals-completed">
        <span>
            <h3 class="goal-headings d-inline">Completed Goals</h3>
        </span>
        <ul>
            {{#each goals}} {{#if completed}} {{> goals/goal-search completed=true}} {{/if}} {{/each}}
        </ul>
    </div>
    {{/unless}}
</section>